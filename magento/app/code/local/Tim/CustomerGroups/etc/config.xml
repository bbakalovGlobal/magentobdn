<config>
    <modules>
        <Tim_CustomerGroups>
            <version>0.1.0</version>
        </Tim_CustomerGroups>
    </modules>
    <global>
        <!--<models>-->
        <!--<tim_customergroups>-->
        <!--<class>Tim_CustomerGroups_Model</class>-->
        <!--</tim_customergroups>-->
        <!--</models>-->
        <!--<blocks>-->
        <!--<adminhtml>-->
        <!--</adminhtml>-->
        <!--</blocks>-->
        <resources>
            <tim_customergroups_setup>
                <connection>
                    <use>core_setup</use>
                </connection>
                <setup>
                    <module>Tim_CustomerGroups</module>
                    <class>Mage_Customer_Model_Entity_Setup</class>
                </setup>
            </tim_customergroups_setup>
        </resources>
        <blocks>
            <adminhtml>
                <rewrite>
                    <customer_group>Tim_CustomerGroups_Block_Adminhtml_Group</customer_group>
                </rewrite>
            </adminhtml>
        </blocks>
        <helpers>
            <tim_customergroups>
                <class>Tim_CustomerGroups_Helper</class>
            </tim_customergroups>
        </helpers>
        <events>
            <adminhtml_customer_prepare_save>
                <observers>
                    <tim_customergroups>
                        <type>singleton</type>
                        <class>Tim_CustomerGroups_Model_Observer</class>
                        <method>addSuffixFromGroup</method>
                    </tim_customergroups>
                </observers>
            </adminhtml_customer_prepare_save>
        </events>
    </global>
    <frontend>
        <translate>
            <modules>
                <tim_customergroups>
                    <files>
                        <default>Tim_CustomerGroups.csv</default>
                    </files>
                </tim_customergroups>
            </modules>
        </translate>
    </frontend>
    <adminhtml>
        <translate>
            <modules>
                <tim_customergroups>
                    <files>
                        <default>Tim_CustomerGroups.csv</default>
                    </files>
                </tim_customergroups>
            </modules>
        </translate>
    </adminhtml>
</config>
