<config>
    <modules>
        <Tim_FragmentaryProducts>
            <version>0.1.3</version>
        </Tim_FragmentaryProducts>
    </modules>
    <global>
        <models>
            <tim_fragmentary_products>
                <class>Tim_FragmentaryProducts_Model</class>
            </tim_fragmentary_products>
            <catalog>
                <rewrite>
                    <product_url>Tim_FragmentaryProducts_Model_Product_Url</product_url>
                </rewrite>
            </catalog>
        </models>
        <helpers>
            <tim_fragmentary_products>
                <class>Tim_FragmentaryProducts_Helper</class>
            </tim_fragmentary_products>
            <checkout>
                <rewrite>
                    <cart>Tim_FragmentaryProducts_Helper_Cart</cart>
                </rewrite>
            </checkout>
        </helpers>
        <blocks>
            <tim_fragmentary_products>
                <class>Tim_FragmentaryProducts_Block</class>
            </tim_fragmentary_products>
        </blocks>
        <catalog>
            <product>
                <type>
                    <fragmentary translate="label" module="tim_fragmentary_products">
                        <label>Fragmentary Product</label>
                        <model>tim_fragmentary_products/product_type</model>
                        <is_qty>0</is_qty>
                        <composite>0</composite>
                        <can_use_qty_decimals>0</can_use_qty_decimals>
                    </fragmentary>
                </type>
            </product>
        </catalog>
        <resources>
            <tim_fragmentary_products_setup>
                <setup>
                    <module>Tim_FragmentaryProducts</module>
                    <class>Mage_Catalog_Model_Resource_Setup</class>
                </setup>
            </tim_fragmentary_products_setup>
        </resources>
        <sales>
            <quote>
                <item>
                    <product_attributes>
                        <tim_fragments />
                    </product_attributes>
                </item>
            </quote>
        </sales>
    </global>
    <frontend>
        <events>
            <checkout_cart_save_after>
                <observers>
                    <tim_fragmentary_products>
                        <class>Tim_FragmentaryProducts_Model_Observer</class>
                        <method>cartUpdate</method>
                    </tim_fragmentary_products>
                </observers>
            </checkout_cart_save_after>
        </events>
        <layout>
            <updates>
                <tim_fragmentary_products>
                    <file>tim/tim_fragmentary_products.xml</file>
                </tim_fragmentary_products>
            </updates>
        </layout>
        <product>
            <collection>
                <attributes>
                    <tim_fragments/>
                </attributes>
            </collection>
        </product>
        <routers>
            <tim_fragmentary_products>
                <use>standard</use>
                <args>
                    <module>Tim_FragmentaryProducts</module>
                    <frontName>tim_fragmentary_products</frontName>
                </args>
            </tim_fragmentary_products>
            <checkout>
                <args>
                    <modules>
                        <tim_fragmentary_products before="Tim_Checkout">Tim_FragmentaryProducts</tim_fragmentary_products>
                    </modules>
                </args>
            </checkout>
        </routers>
    </frontend>
    <frontend>
        <translate>
            <modules>
                <tim_fragmentary_products>
                    <files>
                        <default>Tim_FragmentaryProducts.csv</default>
                    </files>
                </tim_fragmentary_products>
            </modules>
        </translate>
    </frontend>
    <adminhtml>
        <translate>
            <modules>
                <tim_fragmentary_products>
                    <files>
                        <default>Tim_FragmentaryProducts.csv</default>
                    </files>
                </tim_fragmentary_products>
            </modules>
        </translate>
    </adminhtml>
</config>